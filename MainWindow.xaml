<Window x:Class="WpfAppPost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPost"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10" RenderTransformOrigin="0.637,0.456">
            <StackPanel x:Name="postStackPanel" Width="400" Height="200" Margin="0,0,0,10">
                <TextBlock Text="Мой лучший меховой друг!" />
                            <Image Source="photo.jpg" Width="100" Height="150" Margin="0,10,0,10"/>
                <Image Source="sm1.png" Width="20" Height="20" Margin="90,-30,0,10"/>
            </StackPanel>
        <TextBox x:Name="commentTextBox" Width="300" Height="50" Margin="0,10,0,10" Text="Введите комментарий..."/>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="likeButton" Width="80" Height="30" Margin="0,0,10,0" Content="Лайк" Click="LikeButton_Click"/>
            <Button Content="Комментировать" Width="120" Height="30" Click="CommentButton_Click" IsEnabled="True"/>
        </StackPanel>
      </StackPanel>
    </Grid>
</Window>
